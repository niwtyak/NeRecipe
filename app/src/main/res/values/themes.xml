<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeRecipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NeRecipe.NoActionBar">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NeRecipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeRecipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AppTheme.OptionsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="backgroundTint">@color/options_background_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.FavoriteButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/favorite_tint</item>
        <item name="rippleColor">@color/yellow</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.NewStepButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="iconPadding">0dp</item>
        <item name="enforceTextAppearance">false</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>


    </style>

    <style name="Widget.AppTheme.SelectImageButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textAppearance">@style/Widget.AppTheme.StepTitle</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">@dimen/icon_button_min_size</item>
        <item name="minWidth">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.DropoutMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">


    </style>

    <style name="Widget.AppTheme.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Widget.AppTheme.StepTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Widget.AppTheme.StepText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="Widget.AppTheme.Spinner" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textAppearance">@style/Widget.AppTheme.Text</item>
    </style>
</resources>